<h1>Create a New Figure</h1>
<form method="POST" action="/figures">
<label>Name:</label>
  <br>
  <input type="text" name="figure[name]" id="figure_name"><br>
  <br>
<label>Choose an existing Title or create a new one below:</label>
 <br>
  <% @titles.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
    <%= title.name %>
    <br>
    <% end %><br>
  <br>
<label>Create New Title:</label>
 <input type="text" name="title[name]" id="new_title"></input><br>
 <br>

 <label>Choose an existing Landmark or create a new one below:</label>
 <br>
  <% @landmarks.each do |landmark| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
    <%= landmark.name %>
    <%= landmark.year_completed %>
    <br>
    <% end %><br>
  <br>
<label>Create New Landmark:</label>
 <input type="text" name="landmark[name]" id="new_landmark"></input>
 <input type="text" name="landmark[year_completed]" id="new_landmark_year"></input>
 <br>
 <br>
<input type="submit" value="Create New Figure">
</form>